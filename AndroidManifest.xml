<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.bim.pubmed" android:versionCode="30" android:versionName="2.1">

	<application android:icon="@drawable/app_icon" 
	    android:theme="@android:style/Theme.Light"
		android:label="@string/app_name">
		<activity android:name=".ActivityPubMed"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ActivityListArticle">

		</activity>

		<activity android:name=".ActivityAbstract"
			android:label="@string/app_name_abstract">

		</activity>

		<activity android:name=".ActivityMySearch"
			android:theme="@android:style/Theme.Dialog"
			android:label="@string/app_name_my_search">
		</activity>

		<activity android:name=".ActivityMyArticle"
			android:label="@string/app_name_my_article">

		</activity>

		<activity android:name=".ActivityWelcome"
			android:theme="@android:style/Theme.Dialog"
			android:label="@string/app_name_welcome">
		</activity>

		<activity android:name=".ActivitySort"
			android:theme="@android:style/Theme.Dialog"
			android:label="@string/app_name_sort">
		</activity>

		<activity android:name=".ActivityListComment"></activity>

		<activity android:name=".ActivityComment"
			android:windowSoftInputMode="adjustResize"
			android:theme="@android:style/Theme.Dialog">
		</activity>

		<activity android:name=".ActivityUser"
			android:label="@string/app_name_user"
			android:windowSoftInputMode="adjustResize"
			android:theme="@android:style/Theme.Dialog">
		</activity>

		<activity android:name="com.amazon.device.ads.MraidBrowser" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.amazon.device.ads.VideoActionHandler" android:configChanges="keyboardHidden|orientation"/> 
	</application>

	<uses-sdk android:minSdkVersion="3" />

	<supports-screens android:largeScreens="true"
		android:normalScreens="true" android:anyDensity="true" />

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>
